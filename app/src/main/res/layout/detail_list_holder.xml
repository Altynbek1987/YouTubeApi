<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_detail"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/imegtwo"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="@+id/card_view_image"
        app:layout_constraintLeft_toRightOf="@+id/card_view_image"
        app:layout_constraintBottom_toBottomOf="@+id/card_view_image"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_video"
            android:layout_width="200dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Новый кодекс КР - 20 км/час всего два месяца! (выпуск 5) " />
        <TextView
            android:id="@+id/tv_length_of_video"
            android:layout_width="200dp"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="3:05" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>